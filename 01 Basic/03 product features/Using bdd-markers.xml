<?xml version="1.0" encoding="UTF-8"?>
<testcase name="bdd маркеры" xmlns="http://www.jazzteam.org/Routines" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		  tags="Basic, фичи продукта" description="Используем bdd маркеры" >
		  
	<test coverage="100" name="01 Bdd маркеры" 
		  description="тест с 5 bdd-маркерами, валится на 3 маркере." 
		  tags="bdd, field, тест должен валиться">
		<navigate to="http://localhost:${jetty.port}/test/test/registration.htm"/>
		
		<bdd message="mane"/>
		<field id="fieldName" textToType="User Name" />
		<bdd message="pass"/>
		<field id='fieldPassword' textToType="password"/>
		<bdd message="confirmPass"/>	
		<field id="fieldConfirmPasswor" textToType="Confirm Password"/>
		<bdd message="email"/>
		<field id="fieldEmail" textToType="Email"/>
		
		<button id="regButton"/>
	</test>	  
</testcase>	