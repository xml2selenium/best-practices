<?xml version="1.0" encoding="UTF-8"?>
<testcase name="элементы Ajax" xmlns="http://www.jazzteam.org/Routines" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		  tags="Basic, фичи продукта" description="Работа с элементами Ajax">
		  
	<test coverage="100" name="01 Test" 
		  description="Проверка элемента, который появляется на странице через какой-то промежуток времени, без перезагрузки страницы." 
		  tags="navigate, webelement, button, defaultdelay, ajax, javascript">
		<navigate to="http://localhost:${jetty.port}/test/test/comments.htm"/>
		
		<field id="field" textToType="Hello!"/>
		<button id="submit"/>
		
		<defaultdelay time="5000"/>
		<webelement xpath="//*[@id='message']/span" action="isContainsText" text="Thank you for your comment"/>
	</test>	  
</testcase>	