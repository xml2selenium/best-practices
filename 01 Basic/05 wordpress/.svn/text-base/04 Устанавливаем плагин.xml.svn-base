<?xml version="1.0" encoding="UTF-8"?>
<testcase name="wordpress plugin" xmlns="http://www.jazzteam.org/Routines" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		  description="Устанавливаем и удаляем плагин" 	
		  tags="Basic, популярные сервисы">
		  
	<test coverage="100" name="01 InstalPlugin" 
		  description="Устанавливаем плагин, и делаем screenshot, snapshot для Бизнес репорта" 
		  tags="navigate, field, button, webelement, checkbox, combobox, screenshot, snapshot" >
			
		<navigate to="http://xml2selenium.com/demowp/"/>
		<webelement xpath="//*[@id='meta-2']//a[@href='http://xml2selenium.com/demowp/wp-login.php']" action="click"/>
		<pause time="1000"/>
		
		<field id="user_login" textToType="admin"/>
		<field id="user_pass" textToType="S|Q0:Vvo3O5C2k5"/>
		<button id="wp-submit"/>
		<pause time="1000"/>
		
		<button xpath="//*[@id='menu-plugins']//div[@class='wp-menu-name']"/>
		<field id="plugin-search-input" textToType="Hello Dolly"/>
		<button id='search-submit'/>
		<pause time="2000"/>
		
		<checkbox xpath="//*[@id='hello-dolly']//input" action="click"/>
		<combobox xpath="//*[@id='wpbody-content']//select[@name='action']" by="value" value="activate-selected"/>
		<button id="doaction"/>
		
		<screenshot/>
		<snapshot/>		
		
		<!-- logout -->
		<webelement xpath="//a[@title='My Account']" action="mouseMove"/>
		<webelement xpath="//li[@id='wp-admin-bar-logout']/a" action="isExists"/>
		<webelement xpath="//li[@id='wp-admin-bar-logout']/a" action="click"/>
		<webelement id="login" action="isExists"/>   
	</test>	 
	
	<test coverage="100" name="02 DeletePlugin" 
		  description="Удаляем плагин, и делаем screenshot, snapshot для Бизнес репорта" 
		  tags="navigate, field, button, webelement, checkbox, combobox, screenshot, snapshot, radio" >
		<navigate to="http://xml2selenium.com/demowp/"/>
		<webelement xpath="//*[@id='meta-2']//a[@href='http://xml2selenium.com/demowp/wp-login.php']" action="click"/>
		<pause time="1000"/>
		
		<field id="user_login" textToType="admin"/>
		<field id="user_pass" textToType="S|Q0:Vvo3O5C2k5"/>
		<button id="wp-submit"/>
		<pause time="1000"/>
		
		<button xpath="//*[@id='menu-plugins']//div[@class='wp-menu-name']"/>
		<field id="plugin-search-input" textToType="Hello Dolly"/>
		<button id='search-submit'/>
		<pause time="2000"/>
		
		<checkbox xpath="//*[@id='hello-dolly']//input" action="click"/>
		<combobox xpath="//*[@id='wpbody-content']//select[@name='action']" by="value" value="deactivate-selected"/>
		<button id="doaction"/>
		
		<screenshot/>
		<snapshot/>	
		
		<!-- logout -->
		<webelement xpath="//a[@title='My Account']" action="mouseMove"/>
		<webelement xpath="//li[@id='wp-admin-bar-logout']/a" action="isExists"/>
		<webelement xpath="//li[@id='wp-admin-bar-logout']/a" action="click"/>
		<webelement id="login" action="isExists"/>	
	</test> 
</testcase>	