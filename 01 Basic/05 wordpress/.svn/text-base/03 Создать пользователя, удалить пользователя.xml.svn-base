<?xml version="1.0" encoding="UTF-8"?>
<testcase name="wordpress создание пользователя" xmlns="http://www.jazzteam.org/Routines" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		  description="создаем и удаляем пользователя" 	
		  tags="Basic, популярные сервисы">
		  
	<test coverage="100" name="01 CreateUser" 
		  description="Создаем пользователя и делаем screenshot, snapshot, для Бизнес репорта" 
		  tags="wordpress, webelement, navigate, field, button, checkbox, screenshot, snapshot" >
			
		<navigate to="http://xml2selenium.com/demowp/"/>
		<webelement xpath="//*[@id='meta-2']//a[@href='http://xml2selenium.com/demowp/wp-login.php']" action="click"/>
		<pause time="1000"/>
		
		<field id="user_login" textToType="admin"/>
		<field id="user_pass" textToType="S|Q0:Vvo3O5C2k5"/>
		<button id="wp-submit"/>
		<pause time="1000"/>
		
		<button xpath="//*[@id='menu-users']//div[@class='wp-menu-name']"/>
		<button xpath="//*[@id='wpbody']//a[@class='add-new-h2']"/>
		<pause time="3000"/>
		
		<field id="user_login" textToType="a_tester"/>
		<field id="email" textToType="userjazzteam@gmail.com"/>
		<field id="first_name" textToType="Dmitry"/>
		<field id="last_name" textToType="XX"/>
		<field id="pass1" textToType="22232223"/>
		<field id="pass2" textToType="22232223"/> 
		
		<checkbox id="send_password" action="click"/>
		
		<button id="createusersub"/>
		
		<screenshot/>
		<snapshot/>		
		
		<!-- logout -->
		<webelement xpath="//a[@title='My Account']" action="mouseMove"/>
		<webelement xpath="//li[@id='wp-admin-bar-logout']/a" action="isExists"/>
		<webelement xpath="//li[@id='wp-admin-bar-logout']/a" action="click"/>
		<webelement id="login" action="isExists"/>
	</test>	 
	
	<test coverage="100" name="02 DeleteUser" 
		  description="Удаляем пользователя и делаем screenshot, snapshot, для Бизнес репорта" 
		  tags="navigate, field, button, webelement, checkbox, screenshot, snapshot, radio" >
		<navigate to="http://xml2selenium.com/demowp/"/>
		<webelement xpath="//*[@id='meta-2']//a[@href='http://xml2selenium.com/demowp/wp-login.php']" action="click"/>
		<pause time="1000"/>
		
		<field id="user_login" textToType="admin"/>
		<field id="user_pass" textToType="S|Q0:Vvo3O5C2k5"/>
		<button id="wp-submit"/>
		<pause time="1000"/>
		
		<button xpath="//*[@id='menu-users']//div[@class='wp-menu-name']"/>
		
		<checkbox xpath="//tr[2]//input[@type='checkbox']" action="click"/>
		<combobox xpath="//div[@id='wpbody-content']//select[@name='action']" by="value" value="delete"/>
		<button id="doaction"/>
		
		<radio id="delete_option0" action="click"/>
		<button id="submit"/>
		<pause time="2000"/>
		
		<screenshot/>
		<snapshot/>		
		
		<!-- logout -->
		<webelement xpath="//a[@title='My Account']" action="mouseMove"/>
		<webelement xpath="//li[@id='wp-admin-bar-logout']/a" action="isExists"/>
		<webelement xpath="//li[@id='wp-admin-bar-logout']/a" action="click"/>
		<webelement id="login" action="isExists"/>    
	</test> 
</testcase>	